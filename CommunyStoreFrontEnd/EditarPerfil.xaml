<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunyStoreFrontEnd.EditarPerfil"
             Title="EditarPerfil">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Editar Perfil" FontSize="Large" HorizontalOptions="Center" />

            <Label Text="Nombre de Usuario" />
            <Entry x:Name="txtname" Text="{Binding NombreUsuario}" Placeholder="Nombre de Usuario" />

            <Label Text="Descripción" />
            <Entry x:Name="txtdescripcion"  Text="{Binding Descripcion}" Placeholder="Descripción" />

            <Label Text="Dirección" />
            <Entry x:Name="txtdireccion" Text="{Binding Direccion}" Placeholder="Dirección" />

            <Label Text="Teléfono" />
            <Entry x:Name="txttelefono" Text="{Binding Telefono}" Placeholder="Teléfono" />

            <Label Text="Email" />
            <Entry x:Name="txtemail"  Text="{Binding EmailUsuario}" Placeholder="Email" />

            <Button Text="Guardar Información" Clicked="GuardarInformacion_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
