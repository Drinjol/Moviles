<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunyStoreFrontEnd.MainPage">

    <ScrollView>
        <StackLayout Padding="30,0" Spacing="25">

            <Label Text="Bienvenido a nuestra aplicación" FontSize="24" TextColor="DarkBlue" HorizontalOptions="Center" />

            <!-- Formulario de Inicio de Sesión -->
            <Entry Placeholder="Nombre" PlaceholderColor="Gray" IsPassword="True" FontSize="16" />
            <Entry Placeholder="Apellido" PlaceholderColor="Gray" IsPassword="True" FontSize="16" />
            <Entry Placeholder="Correo Electrónico" PlaceholderColor="Gray" Keyboard="Email" FontSize="16" />
            <Entry Placeholder="Contraseña" PlaceholderColor="Gray" IsPassword="True" FontSize="16" />
            <Entry Placeholder="Dirección" PlaceholderColor="Gray" IsPassword="True" FontSize="16" />
            <Entry Placeholder="Teléfono" PlaceholderColor="Gray" IsPassword="True" FontSize="16" />
            <Button x:Name="btn_agregar_usuario" Text="Registrarse" BackgroundColor="DodgerBlue" TextColor="White" FontSize="18" CornerRadius="10" />

        </StackLayout>
    </ScrollView>

</ContentPage>