<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunyStoreFrontEnd.ActualizarPublicacionUsuarioPerfil"
             Title="ActualizarPublicacionUsuarioPerfil">
    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Nombre Completo Usuario" />
            <Entry Text="{Binding NombreCompletoUsuario}" />

            <Label Text="Descripción" FontSize="Large"/>
            <Entry x:Name="txtdescripcion" Text="{Binding DescripcionPublicacion}" FontSize="Medium" />

            <Label Text="Seleccione una categoría:" FontSize="16" TextColor="Black" />
            <Picker x:Name="txtcategoria"
        FontSize="16"
        TextColor="Black"
        BackgroundColor="Gray"
        SelectedItem="{Binding CategoriaPublicacion, Mode=TwoWay}">
                <Picker.Items>
                    <x:String>Hogar</x:String>
                    <x:String>Tecnología</x:String>
                    <x:String>Mascotas</x:String>
                </Picker.Items>
            </Picker>

            <Label Text="Precio" FontSize="Large"/>
            <Entry x:Name="txtprecio" Text="{Binding PrecioPublicacion}" FontSize="Medium" />

            <Button Text="Guardar" Clicked="GuardarInformacion_Clicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>
