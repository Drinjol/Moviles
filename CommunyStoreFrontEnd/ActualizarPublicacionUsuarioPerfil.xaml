<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunyStoreFrontEnd.ActualizarPublicacionUsuarioPerfil"
             Title="ActualizarPublicacionUsuarioPerfil">

    <StackLayout Padding="20">

        <!-- Descripción de la publicación -->
        <Entry Placeholder="Descripción de la publicación" Text="{Binding DescripcionPublicacion}" />

        <!-- Nombre completo del usuario -->
        <Entry Placeholder="Nombre completo del usuario" Text="{Binding NombreCompletoUsuario}" />

        <!-- Fecha de publicación -->
        <DatePicker Date="{Binding FechaPublicacion}" />

        <!-- Imagen de la publicación -->


        <!-- Categoría de la publicación -->
        <Entry Placeholder="Categoría de la publicación" Text="{Binding CategoriaPublicacion}" />

        <!-- Precio de la publicación -->
        <Entry Placeholder="Precio de la publicación" Text="{Binding PrecioPublicacion}" />

        <!-- Botón para guardar información -->
        <Button Text="Guardar" Clicked="GuardarInformacion_Clicked" />
    </StackLayout>

</ContentPage>
